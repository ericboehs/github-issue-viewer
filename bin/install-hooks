#!/bin/bash

# Script to install git hooks for development

set -e

echo "Installing git hooks..."

# Create .git/hooks directory if it doesn't exist
mkdir -p .git/hooks

# Copy hooks from git-hooks directory
if [ -f "git-hooks/pre-commit" ]; then
  cp git-hooks/pre-commit .git/hooks/pre-commit
  chmod +x .git/hooks/pre-commit
  echo "‚úÖ Installed pre-commit hook"
else
  echo "‚ùå git-hooks/pre-commit not found"
  exit 1
fi

if [ -f "git-hooks/post-checkout" ]; then
  cp git-hooks/post-checkout .git/hooks/post-checkout
  chmod +x .git/hooks/post-checkout
  echo "‚úÖ Installed post-checkout hook"
else
  echo "‚ùå git-hooks/post-checkout not found"
  exit 1
fi

echo ""
echo "üéâ Git hooks installed successfully!"
echo ""
echo "Hooks installed:"
echo "  - pre-commit: Runs EditorConfig, rubocop, and tests for Claude-authored commits"
echo "  - post-checkout: Runs bundle install and db:migrate when needed"
echo ""
echo "üìã Optional dependencies for enhanced functionality:"
echo "  - EditorConfig checker: npm install -g editorconfig-checker"
echo "    (Enables automatic code formatting validation)"
